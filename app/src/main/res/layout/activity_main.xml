<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TÃ­tulo y tabla original -->
        <TextView
            android:id="@+id/tv_gravity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GRAVEDAD:"
            android:textSize="20sp"
            android:textColor="#cb3232"
            android:layout_marginTop="75dp"
            android:layout_marginBottom="16dp"
            android:textStyle="bold" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:layout_marginTop="8dp"
            android:background="#DDDDDD"
            android:padding="4dp">

            <!-- Fila de encabezado -->
            <TableRow android:background="#EEEEEE">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eje"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:gravity="center"
                    android:textColor="#000000" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valor"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:gravity="center"
                    android:textColor="#000000" />
            </TableRow>

            <!-- Fila de datos X -->
            <TableRow android:background="#FFFFFF">
                <TextView
                    android:id="@+id/label_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X:"
                    android:padding="8dp"
                    android:gravity="center"
                    android:textColor="#444444" />
                <TextView
                    android:id="@+id/tv_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:padding="8dp"
                    android:gravity="center"
                    android:textColor="#444444" />
            </TableRow>

            <!-- Fila de datos Y -->
            <TableRow android:background="#F9F9F9">
                <TextView
                    android:id="@+id/label_y"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Y:"
                    android:padding="8dp"
                    android:gravity="center"
                    android:textColor="#444444" />
                <TextView
                    android:id="@+id/tv_y"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:padding="8dp"
                    android:gravity="center"
                    android:textColor="#444444" />
            </TableRow>

            <!-- Fila de datos Z -->
            <TableRow android:background="#FFFFFF">
                <TextView
                    android:id="@+id/label_z"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Z:"
                    android:padding="8dp"
                    android:gravity="center"
                    android:textColor="#444444" />
                <TextView
                    android:id="@+id/tv_z"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:padding="8dp"
                    android:gravity="center"
                    android:textColor="#444444" />
            </TableRow>

        </TableLayout>

        <!-- Separador entre tabla y barras -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="16dp" />

        <!-- Barras de progreso -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#FFFFFF"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Progreso de X"
                android:textSize="16sp"
                android:textColor="#333333" />

            <ProgressBar
                android:id="@+id/pb_x"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Progreso de Y"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:textColor="#333333" />

            <ProgressBar
                android:id="@+id/pb_y"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Progreso de Z"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:textColor="#333333" />

            <ProgressBar
                android:id="@+id/pb_z"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textCoordinates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coordenadas GPS:"
            android:textSize="20sp"
            android:paddingBottom="10dp"
            android:textColor="#FFFF00"/>

        <Button
            android:id="@+id/btnGetLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Obtener Coordenadas" />
    </LinearLayout>
</ScrollView>
